{
  "manifest_version": 3,
  "name": "Image Zoomer & Downloader",
  "version": "1.0.0",
  "description": "Zoom any image on hover and download it in your preferred format",
  "permissions": [
    "activeTab",
    "contextMenus",
    "downloads",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "commands": {
    "toggle-zoom": {
      "suggested_key": {
        "default": "Alt+Z"
      },
      "description": "Toggle zoom functionality"
    }
  }
}